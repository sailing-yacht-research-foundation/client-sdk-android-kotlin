<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.syrf.testapp">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestApp">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/location"
            android:name=".activities.LocationActivity" />

        <activity
            android:label="@string/accelerometer_sensor"
            android:name=".activities.AcceleroSensorActivity" />

        <activity
            android:label="@string/magnetic_sensor"
            android:name=".activities.MagneticSensorActivity" />

        <activity
            android:label="@string/gyroscope_sensor"
            android:name=".activities.GyroscopeSensorActivity" />

        <activity
            android:label="@string/first_sample"
            android:name=".activities.FirstSampleActivity" />
    </application>

</manifest>