<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_show_location"
        android:layout_width="300dp"
        android:layout_height="54dp"
        android:layout_marginTop="30dp"
        android:text="@string/location"
        app:layout_constraintBottom_toTopOf="@id/btn_show_accelero_sensor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_show_accelero_sensor"
        android:layout_width="300dp"
        android:layout_height="54dp"
        android:layout_marginTop="30dp"
        android:text="@string/accelerometer_sensor"
        app:layout_constraintBottom_toTopOf="@+id/btn_show_magnetic_sensor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_location" />

    <Button
        android:id="@+id/btn_show_magnetic_sensor"
        android:layout_width="300dp"
        android:layout_height="54dp"
        android:layout_marginTop="30dp"
        android:text="@string/magnetic_sensor"
        app:layout_constraintBottom_toTopOf="@+id/btn_show_gyroscope_sensor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_accelero_sensor" />

    <Button
        android:id="@+id/btn_show_gyroscope_sensor"
        android:layout_width="300dp"
        android:layout_height="54dp"
        android:layout_marginTop="30dp"
        android:text="@string/gyroscope_sensor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_magnetic_sensor" />

</androidx.constraintlayout.widget.ConstraintLayout>